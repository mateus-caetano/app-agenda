<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.mateus.agenda.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:popUpTo="@id/listFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.mateus.agenda.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_listFragment_to_newEventDialog"
            app:destination="@id/newEventDialog" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.mateus.agenda.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="id"
            app:argType="string"/>
        <argument
            android:name="title"
            android:defaultValue=""
            app:argType="string"/>
        <argument
            android:name="description"
            android:defaultValue=""
            app:argType="string"/>
        <argument
            android:name="location"
            android:defaultValue=""
            app:argType="string"/>
        <argument
            android:name="link"
            android:defaultValue=""
            app:argType="string"/>

        <action
            android:id="@+id/action_detailsFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/mapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:uiZoomControls="true"
        map:uiRotateGestures="true"
        map:cameraTilt="30" />
    <dialog
        android:id="@+id/newEventDialog"
        android:name="com.mateus.agenda.NewEventDialog"
        android:label="NewEventDialog" />
    <action
        android:id="@+id/action_newEventDialog_to_listFragment"
        app:destination="@id/listFragment" />
    <argument
        android:name="id_list"
        android:defaultValue=""
        app:argType="string"/>
